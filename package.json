{
  "name": "@anupamsahoo/react-modal",
  "version": "1.0.4",
  "description": "A stacked and themable React modal built for Tailwind CSS v4",
  "author": "Anupam Sahoo",
  "license": "MIT",
  "private": false,
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "./dist/styles.css",
    "./dist/styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "modal",
    "tailwind",
    "tailwindcss",
    "dialog",
    "stacked-modal",
    "ui",
    "component",
    "headless",
    "accessible"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean && cp src/styles.css dist/styles.css"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "tailwindcss": ">=4.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "react-dom": "^19.2.0",
    "tsup": "^8.0.1",
    "typescript": "^5.5.0"
  }
}
