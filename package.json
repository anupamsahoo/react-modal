{
  "name": "@anupamsahoo/react-modal",
  "version": "1.0.9",
  "description": "A stacked and themable React modal built for Tailwind CSS v4",
  "author": "Anupam Sahoo",
  "license": "MIT",
  "private": false,
  "sideEffects": [
    "./dist/styles.css"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": {
      "default": "./dist/styles.css"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "modal",
    "tailwind",
    "tailwindcss",
    "tailwindcss-v4",
    "dialog",
    "stacked-modal",
    "ui",
    "component",
    "headless",
    "accessible",
    "shadcn",
    "shadcn-ui",
    "nextjs",
    "vite"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsup src/index.ts --format cjs,esm --dts && cp src/styles.css dist/styles.css",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "tailwindcss": ">=4.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^4.0.0",
    "tsup": "^8.0.1",
    "typescript": "^5.5.0"
  }
}
